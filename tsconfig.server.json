{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist/server",
    "rootDir": "src/server",
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/server/*"]
    }
  },
  "include": ["src/server/**/*"],
  "exclude": ["src/main/**/*", "src/renderer/**/*", "src/preload/**/*"]
}
