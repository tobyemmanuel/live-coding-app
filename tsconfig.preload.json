{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist/preload",
    "rootDir": "src/preload",
    "baseUrl": ".",
    "paths": {
      "@preload/*": ["src/preload/*"]
    }
  },
  "include": ["src/preload/**/*"],
  "exclude": ["src/main/**/*", "src/renderer/**/*", "src/server/**/*"]
}
